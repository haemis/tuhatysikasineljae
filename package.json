{
  "name": "telegram-business-card-bot",
  "version": "1.0.0",
  "description": "A Telegram bot for creating digital business cards and managing professional networks",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "deploy": "bash scripts/deploy.sh",
    "monitor": "bash scripts/monitor.sh",
    "docker:build": "docker build -t telegram-business-card-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f bot",
    "health-check": "node -e \"require('./dist/utils/healthCheck').default.checkHealth().then(console.log).catch(console.error)\"",
    "performance:check": "node -e \"require('./dist/utils/performance').performanceMonitor.getPerformanceSummary().then(console.log).catch(console.error)\"",
    "cache:stats": "node -e \"const { userCache, connectionCache, searchCache } = require('./dist/utils/cache'); console.log('User Cache:', userCache.getStats()); console.log('Connection Cache:', connectionCache.getStats()); console.log('Search Cache:', searchCache.getStats());\"",
    "cache:clear": "node -e \"const { userCache, connectionCache, searchCache } = require('./dist/utils/cache'); userCache.clear(); connectionCache.clear(); searchCache.clear(); console.log('All caches cleared');\"",
    "test:advanced": "jest --testPathPattern=advanced",
    "test:performance": "jest --testPathPattern=performance",
    "test:cache": "jest --testPathPattern=cache",
    "api:start": "ts-node src/api/index.ts",
    "api:dev": "nodemon src/api/index.ts",
    "security:check": "node -e \"require('./dist/utils/security').securityManager.getSecurityStats().then(console.log).catch(console.error)\"",
    "compliance:report": "node -e \"require('./dist/utils/compliance').complianceManager.generateComplianceReport().then(console.log).catch(console.error)\"",
    "mobile:setup": "cd mobile-app && npm install",
    "mobile:android": "cd mobile-app && npm run android",
    "mobile:ios": "cd mobile-app && npm run ios",
    "optimization:analyze": "node -e \"require('./dist/utils/optimization').systemOptimizer.analyzeSystemPerformance().then(console.log).catch(console.error)\"",
    "optimization:database": "node -e \"require('./dist/utils/optimization').systemOptimizer.optimizeDatabaseQueries().then(console.log).catch(console.error)\"",
    "optimization:cache": "node -e \"require('./dist/utils/optimization').systemOptimizer.optimizeCachePerformance().then(console.log).catch(console.error)\"",
    "optimization:memory": "node -e \"require('./dist/utils/optimization').systemOptimizer.optimizeMemoryUsage().then(console.log).catch(console.error)\"",
    "optimization:trends": "node -e \"console.log(require('./dist/utils/optimization').systemOptimizer.getOptimizationTrends())\"",
    "advanced:search": "node -e \"console.log('Advanced search features available via bot commands')\"",
    "advanced:bulk": "node -e \"console.log('Bulk operations available via bot commands')\"",
    "advanced:integrations": "node -e \"console.log('Integration features available via bot commands')\""
  },
  "keywords": [
    "telegram",
    "bot",
    "business-card",
    "networking",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "telegraf": "^4.15.6",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 